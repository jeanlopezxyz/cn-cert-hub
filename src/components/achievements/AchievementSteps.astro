---
import { CARDS, GRIDS } from '@/app';
import { getAchievementStepColors } from '@/utils';

interface Step {
  number: number;
  title: string;
  description: string;
}

interface Props {
  title: string;
  steps: Step[];
}

const { title, steps } = Astro.props;
---

<!-- WowDash Style Steps -->
<div class="mb-6 sm:mb-8">
  <h2 class="text-xl sm:text-2xl font-semibold mb-4 text-neutral-600 dark:text-neutral-300">
    {title}
  </h2>

  <div class={`${GRIDS.cards.responsive} ${GRIDS.gap.md}`}>
    {
      steps.map((step) => {
        const colors = getAchievementStepColors(step.number);
        return (
          <div class={`card ${CARDS.base} border-0 ${colors.bg}`}>
            <div class="card-body p-5 sm:p-6">
              <div class="flex items-center gap-3 mb-3">
                <div
                  class={`w-10 h-10 sm:w-12 sm:h-12 flex items-center justify-center ${colors.icon} text-white rounded-xl flex-shrink-0`}
                >
                  <span class="text-lg sm:text-xl font-bold">{step.number}</span>
                </div>
                <h4 class={`font-bold text-lg ${colors.text} leading-tight m-0`}>{step.title}</h4>
              </div>
              <p class="text-neutral-600 dark:text-neutral-300 text-base sm:text-lg leading-relaxed">
                {step.description}
              </p>
            </div>
          </div>
        );
      })
    }
  </div>
</div>
