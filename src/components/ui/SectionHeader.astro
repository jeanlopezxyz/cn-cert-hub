---
/**
 * Section Header Component
 * Displays a title and subtitle for content sections
 *
 * Accessibility:
 *   - Uses semantic heading tags (default h2, customizable)
 *   - Maintains proper heading hierarchy
 */

interface Props {
  /** Section title */
  title: string;
  /** Optional subtitle/description */
  subtitle?: string;
  /** Additional CSS classes */
  class?: string;
  /** Center align text */
  centered?: boolean;
  /** Heading level (default: 2) */
  level?: 1 | 2 | 3 | 4 | 5 | 6;
}

const { title, subtitle, class: className = '', centered = false, level = 2 } = Astro.props;
const alignmentClasses = centered ? 'text-center' : 'text-center md:text-left';
const HeadingTag = `h${level}` as 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6';
---

<div class:list={['mb-6', alignmentClasses, className]}>
  <HeadingTag class="text-xl sm:text-2xl font-bold mb-2 text-neutral-900 dark:text-white">
    {title}
  </HeadingTag>
  {subtitle && <p class="text-base text-neutral-600 dark:text-neutral-400">{subtitle}</p>}
</div>
