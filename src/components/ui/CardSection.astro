---
/**
 * Card Section Component
 * A styled card container with backdrop blur, shadow, and border
 *
 * Accessibility:
 *   - Uses semantic <section> when id is provided (landmark)
 *   - Falls back to <div> for non-landmark cards
 *   - Consider adding aria-label for sections without visible headings
 */

interface Props {
  /** Section ID (makes this a semantic section landmark) */
  id?: string;
  /** Additional CSS classes */
  class?: string;
  /** ARIA label for section (recommended when id is provided) */
  'aria-label'?: string;
}

const { id, class: className = '', 'aria-label': ariaLabel } = Astro.props;
const Element = id ? 'section' : 'div';

const baseClasses = [
  'bg-white/80 dark:bg-neutral-800/60 backdrop-blur-sm rounded-2xl p-5 sm:p-6',
  'shadow-lg shadow-neutral-200/50 dark:shadow-neutral-900/30',
  'border border-neutral-200/50 dark:border-neutral-700/50',
  className,
];
---

<Element id={id} class:list={baseClasses} aria-label={ariaLabel}>
  <slot />
</Element>
